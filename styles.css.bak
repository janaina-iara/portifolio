/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --primary-dark: #0DA193;
    --primary-light: #22B4AD;
    --neutral-light: #F2F7F7;
    --neutral-medium: #4A4A4A;
    --accent-warm: #e57548;
    --contrast-subtle: #D5D2E5;
    --warm-white: #FCFCFC;
    --font-family: 'Montserrat', sans-serif;
}

body {
    font-family: var(--font-family);
    line-height: 1.6;
    color: var(--neutral-medium);
    background-color: var(--warm-white);
    overflow-x: hidden;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Header Styles */
.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: rgba(252, 252, 252, 0.95);
    backdrop-filter: blur(10px);
    z-index: 1000;
    transition: all 0.3s ease;
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
}

.logo h2 {
    color: var(--primary-dark);
    font-weight: 700;
    font-size: 1.5rem;
    margin-bottom: -5px;
}

.logo span {
    color: var(--neutral-medium);
    font-size: 0.9rem;
    font-weight: 400;
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
}

.nav-link {
    text-decoration: none;
    color: var(--neutral-medium);
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
}

.nav-link:hover {
    color: var(--primary-dark);
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--primary-dark);
    transition: width 0.3s ease;
}

.nav-link:hover::after {
    width: 100%;
}

.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.hamburger span {
    width: 25px;
    height: 3px;
    background: var(--neutral-medium);
    margin: 3px 0;
    transition: 0.3s;
}

/* Hero Section */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, var(--neutral-light) 0%, var(--warm-white) 100%);
    padding-top: 80px;
}

.hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--neutral-medium);
    margin-bottom: 1.5rem;
    line-height: 1.2;
}

.highlight {
    color: var(--primary-dark);
    position: relative;
}

.highlight::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--accent-warm);
    border-radius: 2px;
}

.hero-subtitle {
    font-size: 1.2rem;
    color: var(--neutral-medium);
    margin-bottom: 2.5rem;
    opacity: 0.8;
}

.hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border: none;
    border-radius: 50px;
    font-family: var(--font-family);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    font-size: 1rem;
}

.btn-primary {
    background: var(--primary-dark);
    color: white;
}

.btn-primary:hover {
    background: var(--primary-light);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(13, 161, 147, 0.3);
}

.btn-secondary {
    background: transparent;
    color: var(--neutral-medium);
    border: 2px solid var(--neutral-medium);
}

.btn-secondary:hover {
    background: var(--neutral-medium);
    color: white;
    transform: translateY(-2px);
}

.hero-image-container {
    position: relative;
    display: flex;
    justify-content: center;
}

.hero-img {
    width: 400px;
    height: 400px;
    object-fit: cover;
    border-radius: 50%;
    border: 8px solid white;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    position: relative;
    z-index: 2;
}

.hero-decoration {
    position: absolute;
    top: -20px;
    right: -20px;
    width: 100px;
    height: 100px;
    background: var(--accent-warm);
    border-radius: 50%;
    opacity: 0.8;
    z-index: 1;
}

/* Section Styles */
.section-header {
    text-align: center;
    margin-bottom: 4rem;
}

.section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--neutral-medium);
    margin-bottom: 1rem;
}

.section-subtitle {
    font-size: 1.1rem;
    color: var(--neutral-medium);
    opacity: 0.7;
}

/* About Section */
.about {
    padding: 6rem 0;
    background: var(--warm-white);
}

.about-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.about-text h3 {
    font-size: 2rem;
    color: var(--primary-dark);
    margin-bottom: 1.5rem;
    font-weight: 600;
}

.about-description {
    font-size: 1.1rem;
    margin-bottom: 2.5rem;
    line-height: 1.8;
}

.about-stats {
    display: flex;
    gap: 2rem;
    margin-bottom: 2.5rem;
}

.stat {
    text-align: center;
}

.stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary-dark);
}

.stat-label {
    font-size: 0.9rem;
    color: var(--neutral-medium);
    opacity: 0.7;
}

.credentials {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.credential {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.credential i {
    color: var(--accent-warm);
    font-size: 1.2rem;
    width: 20px;
}

.about-img {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

/* Services Section */
.services {
    padding: 6rem 0;
    background: var(--neutral-light);
}

.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
}

.service-card {
    background: white;
    padding: 2.5rem 2rem;
    border-radius: 20px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
}

.service-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, var(--primary-dark), var(--primary-light));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
}

.service-icon i {
    font-size: 2rem;
    color: white;
}

.service-card h3 {
    font-size: 1.3rem;
    color: var(--neutral-medium);
    margin-bottom: 1rem;
    font-weight: 600;
}

.service-card p {
    color: var(--neutral-medium);
    opacity: 0.8;
    line-height: 1.6;
}

/* Portfolio Section */
.portfolio {
    padding: 6rem 0;
    background: var(--warm-white);
}

.portfolio-filter {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
}

.filter-btn {
    padding: 0.8rem 1.5rem;
    border: 2px solid var(--contrast-subtle);
    background: transparent;
    color: var(--neutral-medium);
    border-radius: 25px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: var(--font-family);
    font-weight: 500;
}

.filter-btn.active,
.filter-btn:hover {
    background: var(--primary-dark);
    color: white;
    border-color: var(--primary-dark);
}

.portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.portfolio-item {
    position: relative;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
    cursor: pointer;
}

.portfolio-item:hover {
    transform: scale(1.05);
}

.portfolio-item img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    transition: transform 0.3s ease;
}

.portfolio-item:hover img {
    transform: scale(1.1);
}

.portfolio-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(13, 161, 147, 0.8), rgba(34, 180, 173, 0.8));
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
}

.portfolio-item:hover .portfolio-overlay {
    opacity: 1;
}

.portfolio-overlay i {
    font-size: 2rem;
    color: white;
}

/* Scheduling Section */
.scheduling {
    padding: 6rem 0;
    background: var(--warm-white);
}

.scheduler-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
}

.calendar-section {
    background: white;
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
}

.calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.calendar-header h3 {
    color: var(--neutral-medium);
    font-weight: 600;
    font-size: 1.3rem;
}

.nav-btn {
    background: var(--primary-dark);
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.nav-btn:hover {
    background: var(--primary-light);
    transform: scale(1.1);
}

.calendar-grid {
    width: 100%;
}

.weekdays {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1px;
    margin-bottom: 1rem;
}

.weekday {
    text-align: center;
    padding: 0.5rem;
    font-weight: 600;
    color: var(--neutral-medium);
    font-size: 0.9rem;
}

.days-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 1px;
}

.day {
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    border-radius: 8px;
    font-weight: 500;
    transition: all 0.3s ease;
    position: relative;
    box-sizing: border-box;
}

.day.available {
    background: var(--neutral-light);
    color: var(--neutral-medium);
}

.day.available:hover {
    background: var(--primary-light);
    color: white;
    transform: scale(1.1);
}

.day.selected {
    background: var(--primary-dark);
    color: white;
}

.day.past-day {
    color: #ccc;
    cursor: not-allowed;
}

.day.unavailable {
    background: #f5f5f5;
    color: #ccc;
    cursor: not-allowed;
}

.day.other-month {
    color: #ddd;
    cursor: not-allowed;
}

.time-section {
    background: white;
    padding: 2rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
}

.time-section h4 {
    color: var(--neutral-medium);
    margin-bottom: 1.5rem;
    font-weight: 600;
}

.time-slots {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Padrão para 2 colunas */
    gap: 1rem;
}

.time-slot,
.time-slot-interval {
    padding: 1rem;
    border: 2px solid var(--contrast-subtle);
    background: white;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-family: var(--font-family);
    font-weight: 500;
    color: var(--neutral-medium);
    text-align: center; /* Centraliza o texto */
}

.time-slot:hover,
.time-slot-interval:hover {
    border-color: var(--primary-dark);
    background: var(--primary-dark);
    color: white;
}

.time-slot.selected,
.time-slot-interval.selected {
    background: var(--primary-dark);
    border-color: var(--primary-dark);
    color: white;
}

.time-slot.booked {
    background: #f5f5f5;
    color: #999;
    cursor: not-allowed;
    border-color: #ddd;
}

.select-date-message {
    grid-column: 1 / -1;
    text-align: center;
    color: var(--neutral-medium);
    opacity: 0.7;
    font-style: italic;
}

.appointment-form {
    background: white;
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    margin-top: 2rem;
}

.appointment-form h4 {
    color: var(--neutral-medium);
    margin-bottom: 1.5rem;
    font-weight: 600;
}

.selected-info {
    background: var(--neutral-light);
    padding: 1.5rem;
    border-radius: 10px;
    margin-bottom: 2rem;
}

.selected-info p {
    margin-bottom: 0.5rem;
    color: var(--neutral-medium);
}

.selected-info strong {
    color: var(--primary-dark);
}

.form-buttons {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
}

.success-message {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    z-index: 2000;
    text-align: center;
    min-width: 300px;
}

.success-content i {
    font-size: 3rem;
    color: var(--primary-dark);
    margin-bottom: 1rem;
}

.success-content h4 {
    color: var(--neutral-medium);
    margin-bottom: 0.5rem;
}

.success-content p {
    color: var(--neutral-medium);
    opacity: 0.8;
}

/* Responsive Design for Scheduling */
@media (max-width: 768px) {
    .scheduler-container {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .time-slots {
        grid-template-columns: 1fr; /* Uma coluna em telas menores */
    }

    .form-buttons {
        flex-direction: column;
    }

    .calendar-section,
    .time-section,
    .appointment-form {
        padding: 1.5rem;
    }
}

@media (max-width: 480px) {
    .days-grid {
        gap: 2px;
    }

    .day {
        font-size: 0.9rem;
    }

    .time-slot,
    .time-slot-interval {
        padding: 0.8rem;
        font-size: 0.9rem;
    }
}

/* Contact Section */
.contact {
    padding: 6rem 0;
    background: var(--neutral-light);
}

.contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
}

.contact-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.contact-item {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
}

.contact-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, var(--primary-dark), var(--primary-light));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.contact-icon i {
    font-size: 1.5rem;
    color: white;
}

.contact-details h3 {
    color: var(--neutral-medium);
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.contact-details p {
    color: var(--neutral-medium);
    opacity: 0.8;
    margin-bottom: 0.5rem;
}

.contact-link {
    color: var(--primary-dark);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
}

.contact-link:hover {
    color: var(--accent-warm);
}

.location-note {
    font-size: 0.9rem;
    font-style: italic;
}

.contact-form {
    background: white;
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
}

.contact-form h3 {
    color: var(--neutral-medium);
    margin-bottom: 2rem;
    font-weight: 600;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group input,
.form-group select,
.form-group textarea {
    width: 100%;
    padding: 1rem;
    border: 2px solid var(--contrast-subtle);
    border-radius: 10px;
    font-family: var(--font-family);
    font-size: 1rem;
    transition: border-color 0.3s ease;
    background: var(--warm-white);
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--primary-dark);
}

.form-group textarea {
    resize: vertical;
    min-height: 100px;
}

/* Footer */
.footer {
    background: var(--neutral-medium);
    color: white;
    padding: 3rem 0 1rem;
}

.footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
}

.footer-section h3,
.footer-section h4 {
    margin-bottom: 1rem;
    color: var(--primary-light);
}

.footer-section p {
    opacity: 0.8;
    line-height: 1.6;
}

.footer-section ul {
    list-style: none;
}

.footer-section ul li {
    margin-bottom: 0.5rem;
    opacity: 0.8;
}

.footer-section ul li i {
    margin-right: 0.5rem;
    color: var(--primary-light);
}

.social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
}

.social-links a {
    width: 40px;
    height: 40px;
    background: var(--primary-dark);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    transition: background 0.3s ease;
}

.social-links a:hover {
    background: var(--accent-warm);
}

.footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    opacity: 0.6;
}

/* Responsive Design */
@media (max-width: 768px) {
    .hamburger {
        display: flex;
    }

    .nav-menu {
        position: fixed;
        top: 80px;
        left: -100%;
        width: 100%;
        height: calc(100vh - 80px);
        background: var(--warm-white);
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding-top: 2rem;
        transition: left 0.3s ease;
    }

    .nav-menu.active {
        left: 0;
    }

    .hero-container {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 2rem;
    }

    .hero-title {
        font-size: 2.5rem;
    }

    .hero-img {
        width: 300px;
        height: 300px;
    }

    .about-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .about-stats {
        justify-content: center;
    }

    .contact-content {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .hero-buttons {
        justify-content: center;
    }

    .btn {
        padding: 0.8rem 1.5rem;
        font-size: 0.9rem;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 0 15px;
    }

    .hero-title {
        font-size: 2rem;
    }

    .section-title {
        font-size: 2rem;
    }

    .hero-img {
        width: 250px;
        height: 250px;
    }

    .about-stats {
        flex-direction: column;
        gap: 1rem;
    }

    .services-grid {
        grid-template-columns: 1fr;
    }

    .portfolio-grid {
        grid-template-columns: 1fr;
    }
}

/* Smooth Scrolling */
html {
    scroll-behavior: smooth;
}

/* Loading Animation */
.fade-in {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.6s ease;
}

.fade-in.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Modal Styles for Portfolio */
.modal {
    display: none;
    position: fixed;
    z-index: 2000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
}

.modal-content {
    position: relative;
    margin: auto;
    padding: 0;
    width: 90%;
    max-width: 800px;
    top: 50%;
    transform: translateY(-50%);
}

.modal-content img {
    width: 100%;
    height: auto;
    border-radius: 10px;
}

.close {
    position: absolute;
    top: 15px;
    right: 35px;
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    cursor: pointer;
}

.close:hover {
    color: var(--accent-warm);
}


.time-slot.freelancer-day {
    background: white;
    color: var(--neutral-medium);
    font-weight: 600;
    padding: 20px;
    font-size: 16px;
    grid-column: 1 / -1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border: 2px solid var(--contrast-subtle);
    transition: all 0.3s ease;
}

.time-slot.freelancer-day:hover {
    background: var(--primary-dark);
    border-color: var(--primary-dark);
    color: white;
    transform: scale(1.1);
}

.time-slot.freelancer-day.selected {
    background: var(--primary-dark);
    border-color: var(--primary-dark);
    color: white;
}

